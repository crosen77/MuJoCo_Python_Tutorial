import mujoco as mj
import mujoco.viewer as mjv
import cv2
import numpy as np

model = mj.MjModel.from_xml_path('block_with_camera.xml')
data = mj.MjData(model)
renderer = mj.Renderer(model, height=480, width=640)

with mjv.launch_passive(model, data) as viewer:
    cam_id = mj.camera("robot_camera").id

    while True:
        mj.mj_step(model, data)
        viewer.sync()
        renderer.update_scene(data, camera=cam_id)
        image = renderer.render()
        image_bgr = cv2.cvtColor(image, cv2.COLOR_RGB2BGR)
        cv2.imshow("MuJoCo Camera View", image_bgr)

        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

cv2.destroyAllWindows()